<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Train Schedule</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="container">
      <h1 class="mt-5 mb-4">Nuremberg to Munich</h1>
      <% data.forEach((trainGroup, index) => { %> <% if (trainGroup.length > 0)
      { %>
      <div class="card mb-4">
        <div class="card-header bg-dark-subtle text-white">
          <h2 class="card-title">
            <%= trainGroup[0].departure_time.toUTCString().substring(0, 16); %>
          </h2>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Train Name</th>
                  <th>Departure Time</th>
                  <th>Arrival Time</th>
                  <th>Price</th>
                  <th>Time Stamp</th>
                </tr>
              </thead>
              <tbody>
                <% trainGroup.forEach(train => { %>
                <tr>
                  <td><%= train.train_name %></td>
                  <td>
                    <%= new Date(train.departure_time).toLocaleString() %>
                  </td>
                  <td><%= new Date(train.arrive_time).toLocaleString() %></td>
                  <td>$<%= train.price.toFixed(2) %></td>
                  <td>$<%= train.timestamp.toLocaleString() %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <% } %> <% }) %>
    </div>
    <!-- Bootstrap JS Bundle -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
